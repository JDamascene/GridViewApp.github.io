<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorPrimary"
    android:layout_height="match_parent"
    tools:context="com.example.emobilis.gridmoviecharlie.DetailsActivity">

    <ImageView
        android:id="@+id/imgMoviePic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        app:srcCompat="@drawable/img_1" />

    <TextView
        android:id="@+id/txtMovieName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgMoviePic"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp"
        android:text="Shaw Shunk Redemption"
        android:textColor="#efe61111"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/txtMoviePrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtMovieName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="2000"
        android:textColor="#fff"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/txtDecription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/txtMoviePrice"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:text="Description Chamber"
        android:textColor="#80ffffff"
        android:textSize="24sp" />
</RelativeLayout>
